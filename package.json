{
  "name": "Scrummer",
  "version": "1.0.0",
  "description": "Scrummer is a desktop application for enhancing your productivity.",
  "main": "index.js",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Lorengamboa/Scrummer.git"
  },
  "bugs": {
    "url": "https://github.com/Lorengamboa/Scrummer/issues"
  },
  "homepage": "https://github.com/Lorengamboa/Scrummer#readme",
  "scripts": {
    "start": "electron .",
    "package-mac": "electron-packager . Scrummer --overwrite --platform=darwin --arch=x64 --icon=app/assets/img/ico/icon.icns --out=release-builds",
    "package-win": "electron-packager . Scrummer --overwrite --asar=true --platform=win32 --arch=ia32 --icon=app/assets/img/ico/icon.ico --out=release-builds",
    "package-linux": "electron-packager . Scrummer --overwrite --asar=true --platform=linux --arch=x64 --icon=app/assets/img/ico/icon.png --out=release-builds",
    "test": "jest"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "electron": "^1.7.9"
  },
  "devDependencies": {
    "electron-packager": "^9.1.0",
    "jest": "^21.2.1",
    "spectron": "^3.7.2"
  }
}
